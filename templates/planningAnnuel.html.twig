</style>

{# Draw schedule #}
<table style="width:100%">

    <thead>
        <tr>
            {% for column in columns_header %}
                <th>{{ column }}</th>
            {% endfor %}
        </tr>
    </thead>

    <tbody>
        {% for content_column in schedule_content %}
            <tr>
                {# <td>{{ line }}</td> #}
                {% for line in content_column  %}
                    <td>{{ line }}</td>
                {% endfor %}
            </tr>
        {% endfor %}
    </tbody>

</table>


